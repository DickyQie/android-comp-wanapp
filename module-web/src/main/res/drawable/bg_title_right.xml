<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:bottomRightRadius="30dp" android:topRightRadius="30dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:topRightRadius="30dp" android:bottomRightRadius="30dp" />
            <solid android:color="#E6E3E3" />
            <stroke android:color="#E6E3E3" android:width="1dp"/>

        </shape>
    </item>
</selector>